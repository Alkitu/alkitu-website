# Supabase Configuration
# Get these values from: https://supabase.com/dashboard/project/_/settings/api

# Your Supabase project URL (format: https://your-project.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key (starts with "eyJ...")
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# RESEND Email Configuration
# Get API key from: https://resend.com/api-keys

# REQUIRED: RESEND API key (starts with "re_")
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx

# OPTIONAL: Email sender configuration
# These can be managed via admin panel at /admin/settings
# If not set, defaults to values in email_settings table
EMAIL_FROM=info@alkitu.com
EMAIL_DOMAIN=alkitu.com

# OPTIONAL: Enable/disable email sending
# Set to 'false' in development to avoid sending real emails
# Defaults to 'true' if not set
RESEND_ENABLED=true
